        <wpfTool:DecimalUpDown x:Name="AmountTests3" HorizontalAlignment="Right" Height="23" Margin="0,198,45,0" Minimum="1" Maximum="1000000" Text="10" VerticalAlignment="Top" Width="68"/>
        <Button Content="OK" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="161,268,0,0" Click="Button_Click" Name="OK"/>
        <Button Content="Anuluj" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="59,268,0,0" Click="Button_Click" Name="Anuluj"  />

