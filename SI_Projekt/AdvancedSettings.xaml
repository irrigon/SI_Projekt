        <wpfTool:DecimalUpDown x:Name="RythmLife" HorizontalAlignment="Right" Height="23" Margin="0,57,45,0" Minimum="1" Maximum="8" Text="10" VerticalAlignment="Top" Width="68"/>
        <Label Content="Stabilność wersów:" HorizontalAlignment="Right" Margin="0,85,118,0" VerticalAlignment="Top" Width="142"/>
        <wpfTool:DecimalUpDown x:Name="lenSability" HorizontalAlignment="Right" Height="23" Margin="0,88,45,0" Minimum="0" Maximum="20" Text="10" VerticalAlignment="Top" Width="68"/>
